    "collapsed": true
   },
   "outputs": [],
   "source": [
    "def prepare_image(path):\n",
    "    im = cv2.resize(cv2.imread(path), (224, 224)).astype(np.float32)\n",
    "    im[:,:,0] -= 0\n",
    "    im[:,:,1] -= 0\n",
    "    im[:,:,2] -= 0\n",
    "    im = im.transpose((2,0,1))\n",
    "    im = np.expand_dims(im, axis=0)\n",
    "    return im"
   ]
